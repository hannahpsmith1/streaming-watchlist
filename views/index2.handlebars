<h1>What to Watch </h1>

<h2>Add a Show</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Show Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Show?</label><br>
    <input type="radio" name="watched" value="false" checked> Not Watched
    <input type="radio" name="watched" value="true"> Watched
  </div>

  <button type="submit">Add Show</button>
</form>


{{#each media}}
<p>{{show_name}}</p>
{{/each}}
